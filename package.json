{
  "name": "cloudflare_apollo_server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "run-p -l -c lint:*",
    "lint:eslint": "eslint './**/*.{js,mjs,ts,tsx}' --format codeframe --color --max-warnings=0",
    "lint:type-src": "tsc --pretty",
    "lint:type-test": "tsc -p ./tests/tsconfig.json --pretty",
    "lint:format": "prettier -c './**/*.{js,mjs,ts,tsx}'",
    "build:cloudflare": "pnpm lint && node ./scripts/build/cloudflare.js",
    "format": "prettier -w './**/*.{js,mjs,ts,tsx}'",
    "dev": "FORCE_COLOR=true run-p -l dev:*",
    "dev:server": "CFWORKER_CUSTOM_BUNDLER=$PWD/scripts/build/local.mjs pnpm -- cfworker run -w src/index.ts",
    "dev:gen-graphql-types": "graphql-codegen --watch",
    "deploy:dev": "wrangler publish",
    "deploy:prod": "NODE_ENV=production wrangler publish --env prod",
    "test": "CFWORKER_CUSTOM_BUNDLER=$PWD/scripts/build/local.mjs CFWORKER_CUSTOM_TEST_HOST=$PWD/scripts/build/test.mjs pnpm -- cfworker test -p 7001",
    "postinstall": "patch-package"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "14",
    "pnpm": ">= 6.5.0"
  },
  "dependencies": {
    "apollo-server-cloudflare": "^3.3.0",
    "buffer": "^6.0.3",
    "graphql": "^15.6.0"
  },
  "devDependencies": {
    "@cfworker/dev": "^1.9.0",
    "@cloudflare/workers-types": "^2.2.2",
    "@cloudflare/wrangler": "^1.19.3",
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-resolvers": "^2.2.1",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "esbuild": "^0.13.1",
    "esbuild-plugin-alias": "^0.1.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "expect": "^27.2.3",
    "fast-safe-stringify": "^2.1.1",
    "glob": "^7.2.0",
    "jest-mock": "^27.1.1",
    "mocha": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.4.7",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
